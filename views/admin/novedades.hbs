<div class="conteiner" style="margin-top: 50px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">cerrar sesion <i
                        class="fas fa-sing-out-alt"></i></a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7" style="marqin-top:-9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus">Nuevo</i></a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table">
                        <th scope="col">#</th>
                        <th scope="col">especie</th>
                        <th scope="col">nombre</th>
                        <th scope="col">edad</th>
                        <th scope="col">raza</th>
                        <th scope="col">estado</th>
                        <th scope="col">tamano</th>
                        <th scope="col">imagen</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{especie}}</td>
                        <td>{{nombre}}</td>
                        <td>{{edad}}</td>
                        <td>{{raza}}</td>
                        <td>{{estado}}</td>
                        <td>{{tamano}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" title="editar" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="eliminar" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>

    </div>






</div>